<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    android:clipToPadding="false"
    tools:context=".InfoPozActivity"
    android:background="@drawable/background">

    <ImageView
        android:id="@+id/pzn_info"
        android:layout_width="match_parent"
        android:layout_height="173dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/edupic" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pzn_info"
        android:layout_centerHorizontal="true"
        android:background="#BCffffff"
        android:orientation="vertical">

        <TextView
            android:id="@+id/info_poznan"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="Aktualne pomiary:"
            android:textColor="#000000"
            android:textSize="20dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="68dp"
        android:layout_height="120dp"
        android:layout_below="@+id/pzn_info"
        android:layout_marginTop="34dp"
        android:background="#BCffffff"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
            android:id="@+id/temp_img"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            app:srcCompat="@drawable/temp_img" />

            <ImageView
                android:id="@+id/humi_img"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                app:srcCompat="@drawable/humi_img" />

            <ImageView
                android:id="@+id/pres_img"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                app:srcCompat="@drawable/pres_img" />

            <ImageView
                android:id="@+id/ligh_img"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                app:srcCompat="@drawable/ligh_img" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="260dp"
        android:layout_height="120dp"
        android:layout_alignEnd="@+id/pzn_info"
        android:layout_below="@+id/pzn_info"
        android:orientation="horizontal"
        android:layout_alignRight="@+id/pzn_info"
        android:layout_marginTop="34dp"
        android:background="#BCffffff">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/temp_edu"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:text="Temperatura:"
                android:textColor="#000000"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/humi_edu"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:text="Wilgotność:"
                android:textColor="#000000"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/pres_edu"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:text="Ciśnienie:"
                android:textColor="#000000"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/ligh_edu"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:text="Natężenie światła:"
                android:textColor="#000000"
                android:textSize="20dp" />

        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="325dp"
        android:background="#BCffffff">

        <TextView
            android:id="@+id/test_edu"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="Natężenie światła opasdjf  opasjf paosjf oasjf jfas as fjaspofj asfjoas joasjf poaj sfojsa fo japoj psod js dposjd fpojsdopf jspodfjposdj fpojsd fjsd j sdopjs opjs dfpojsod fjopsdj posj dfposj dfpos jdopsj opsjd opsj dfopsj dfopsj fopsjd opsjd fopjsd opjsd ofjsopdfj osdj fopsj opsjdf opj sdoj oas jopj fpo aso jpoas fjp  N A na końcu beka:"
            android:textColor="#000000"
            android:textSize="20dp" />




    </ScrollView>

</RelativeLayout>

